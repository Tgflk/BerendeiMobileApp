<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRegistr"
    android:background="#442727">

    <ImageView
        android:id="@+id/imageView10_white"
        android:layout_width="388dp"
        android:layout_height="671dp"
        android:layout_marginBottom="224dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageButton
        android:id="@+id/logoregistr"
        android:layout_width="134dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="141dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="136dp"
        android:background="#442727"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_svg_our"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/page_reg"
        android:layout_width="416dp"
        android:layout_height="466dp"
        android:layout_marginTop="372dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoregistr"
        app:srcCompat="@drawable/page" />


    <EditText
        android:id="@+id/password_register"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView10_white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:autofillHints="emailAddress"
        android:hint="password"
        app:layout_constraintEnd_toEndOf="@+id/imageView10_white"
        app:layout_constraintStart_toStartOf="@+id/imageView10_white"
        app:layout_constraintTop_toBottomOf="@+id/email_register_act"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/name_register"
        android:layout_width="268dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:autofillHints="emailAddress"
        android:hint="имя и фамилия"
        app:layout_constraintEnd_toEndOf="@+id/imageView10_white"
        app:layout_constraintStart_toStartOf="@+id/imageView10_white"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/email_register_act"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:autofillHints="password"
        android:hint="email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_register"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="252dp"
        android:layout_height="66dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="#442727"
        android:fontFamily="@font/pt_serif"
        android:text="зарегистрироваться"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_register" />

    <TextView
        android:id="@+id/log_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="У меня уже есть аккаунт"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_register" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="259dp"
        android:layout_height="45dp"
        android:layout_marginTop="100dp"
        android:text="Регистрация"
        android:fontFamily="@font/pt_serif_bold"
        android:gravity="center"
        android:textSize="33sp"
        android:textColor="#442727"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logoregistr" />


</androidx.constraintlayout.widget.ConstraintLayout>